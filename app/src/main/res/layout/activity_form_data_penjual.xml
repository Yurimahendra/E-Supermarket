<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormDataPenjualActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

      <TextView
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="Lengkapi Data Diri"
          android:textStyle="bold"
          android:textSize="18dp" />

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="NIK"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"
          />

      <EditText
          android:id="@+id/EdtNik"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="number"
          android:maxLength="16"
          />

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nama Lengkap"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtNama"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="textCapSentences|textAutoCorrect"/>

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Jenis Kelamin"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <Spinner
          android:id="@+id/SpJk"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:entries="@array/Jenis_Kelamin"/>

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nomor Ponsel"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtNop"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="number"/>

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tempat Lahir"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtTeLa"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="textCapSentences|textAutoCorrect"/>

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tanggal Lahir"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtTala"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="date"
          android:focusable="false" />

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Alamat"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtAlamat"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="textCapSentences"
          android:backgroundTint="@color/black"/>

      <TextView
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nama Toko"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="@color/black"/>

      <EditText
          android:id="@+id/EdtNato"
          android:background="@null"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:inputType="textCapSentences|textAutoCorrect"/>

      <Button
          android:layout_marginTop="5dp"
          android:id="@+id/btnUpdateData"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="SIMPAN"
          android:textSize="16sp"
          android:textStyle="bold"/>

      </LinearLayout>

    </ScrollView>

</LinearLayout>