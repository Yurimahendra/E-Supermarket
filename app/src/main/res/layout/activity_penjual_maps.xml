<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penjual.Activity.PenjualMapsActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnsimpanlokasiPenjualMaps"/>

    <Button
        android:id="@+id/btnsimpanlokasiPenjualMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latPenjualMaps"
        android:text="latidu"
        android:layout_above="@+id/longiPenjualMaps"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longiPenjualMaps"
        android:text="longitud"
        android:layout_above="@+id/alamatMapsPenjual"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alamatMapsPenjual"
        android:text="alamat"
        android:layout_above="@+id/btnsimpanlokasiPenjualMaps"
        android:visibility="gone"/>
</RelativeLayout>
