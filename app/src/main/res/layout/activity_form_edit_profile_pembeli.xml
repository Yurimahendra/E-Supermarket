<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pembeli.Activity.FormEditProfilePembeliActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Edit Data Pembeli"
                android:textSize="18dp"
                android:textStyle="bold" />

            <!--<TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
                -->

            <EditText
                android:id="@+id/tvIdProfPmbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_toRightOf="@id/ImgProdukView"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:id="@+id/EdtNikPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Nik"
                    android:inputType="number"
                    android:maxLength="16"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nama Lengkap"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
                -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:hint="Nama Lengkap"
                    android:id="@+id/EdtNamaPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences|textAutoCorrect"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/EdtSpJkPmbl"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:entries="@array/Jenis_Kelamin" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nomor Ponsel"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
                -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:hint="Nomor Ponsel"
                    android:id="@+id/EdtNopPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:text="Tempat Lahir"
                 android:textColor="@color/black"
                 android:textSize="16sp"
                 android:textStyle="bold" />
                 -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:hint="Tempat Lahir"
                    android:id="@+id/EdtTeLaPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences|textAutoCorrect"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
                -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:hint="Tanggal Lahir"
                    android:id="@+id/EdtTalaPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    android:inputType="date"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
                -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">
                <EditText
                    android:hint="Alamat"
                    android:id="@+id/EdtAlamatPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nama Toko"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />-->


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_camera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/EdtImgProfilePmbl"
                    android:layout_marginTop="5dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Klik gambar untuk upload"
                    android:layout_marginStart="5dp"/>


            </LinearLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/btnSimpanEditDataPmbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIMPAN"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressProfilePmbl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>