<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/CbItemKeranjng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DeleteItmKeranjng"
            android:src="@drawable/delete"
            android:layout_below="@+id/ImgItemKeranjang" />

        <ImageView
            android:id="@+id/ImgItemKeranjang"
            android:layout_width="80dp"
            android:layout_height="147dp"
            android:src="@drawable/logo"
            android:layout_toRightOf="@+id/CbItemKeranjng"/>

        <TextView
            android:id="@+id/tvIdBarangKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="id"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNamaBarangKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="Nama Barang"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMerkKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNamaBarangKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="Merk"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHargaKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMerkKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="Harga"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStokKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHargaKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="Stok"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvOngkirKeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ImgItemKeranjang"
            android:text="ongkir"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAngkaJumlahKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHargaKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgKurangiKeranjang"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgKurangiKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHargaKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ImgItemKeranjang"
            android:src="@drawable/ic_baseline_kurang_24" />

        <ImageView
            android:id="@+id/imgTambahiKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHargaKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvSatuanKeranjang"
            android:src="@drawable/ic_baseline_tambah_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSatuanKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStokKeranjang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvAngkaJumlahKeranjang"
            android:text="Kg"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <!-- <com.google.android.material.textview.MaterialTextView
             android:id="@+id/tvDeskripsibeli"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Deskripsi"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:layout_toRightOf="@+id/ImgItembeli"
             android:layout_below="@id/tvSatuanbeli"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>